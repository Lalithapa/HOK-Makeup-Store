{
  "sections": {
    "banner": {
      "type": "main-collection-banner",
      "disabled": true,
      "settings": {
        "show_collection_description": true,
        "show_collection_image": false,
        "color_scheme": "scheme-1"
      }
    },
    "multi_layout_collection_4nHFii": {
      "type": "multi-layout-collection",
      "settings": {
        "bg_color": "#ffffff",
        "margin_top_desktop": 24,
        "margin_bottom_desktop": 24,
        "margin_top_mobile": 16,
        "margin_bottom_mobile": 16,
        "carousel-title-2": "{{ collection.metafields.custom.nica_section.value.title_2.value }}",
        "carousel-title-3": "{{ collection.metafields.custom.nica_section.value.title_third.value }}"
      }
    },
    "product-grid": {
      "type": "main-collection-product-grid",
      "custom_css": [
        ".product-count-vertical.light {display: none;}"
      ],
      "settings": {
        "products_per_page": 20,
        "columns_desktop": 4,
        "color_scheme": "scheme-1",
        "advertisement_1": "{{ collection.metafields.custom.ad_product_1.value }}",
        "advertisement_2": "{{ collection.metafields.custom.advertisement_2_product.value }}",
        "image_ratio": "adapt",
        "image_shape": "default",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false,
        "quick_add": "none",
        "enable_filtering": true,
        "filter_type": "vertical",
        "enable_sorting": true,
        "columns_mobile": "2",
        "padding_top": 16,
        "padding_bottom": 36
      }
    }
  },
  "order": [
    "banner",
    "multi_layout_collection_4nHFii",
    "product-grid"
  ]
}
