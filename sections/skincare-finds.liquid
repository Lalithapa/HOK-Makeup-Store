    margin-top: {{ section.settings.margin_top_desktop }}px;
    margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
    padding-top: {{ section.settings.padding_text_top_desktop }}px;
   padding-bottom: {{ section.settings.padding_text_bottom_desktop }}px;
  }
   .section-{{ section.id }} .skincare-finds-section{
     background-color: {{ section.settings.background_color }};
   }
  .section-{{ section.id }} .b-skincare-vendor{
    font-size: 22px;
    font-weight: 800;
    line-height: 32px;
    margin-top: 10px;
  }
 .section-{{ section.id }}  .b-skincare-subtitle{
    font-size: 19px;
    color: #7E7E7E;
  }
 .section-{{ section.id }}  .b-skincare-subtitle strong{
    color: #1B1B1B;
  }
  .section-{{ section.id }} .skincare-finds-swiper-pagination-{{ section.id }}{
