    z-index:1;
  }
  .section-{{ section.id }} .skincare-finds-swiper-pagination-{{ section.id }} .swiper-pagination-progressbar-fill{
    background: #6E6E6E !important;
  }
 .section-{{ section.id }}  .view-all-continer-btn{
    color: #000;
    font-weight: 800;
    font-size: 16px;
    text-transform: uppercase;
    padding: 12px 24px;
    border-radius: 50px;
    border: 1px solid #000;
    background: #FFF;
    text-align: center;
    justify-content: center;
  }
  .section-{{ section.id }} .skincare-offer-card {
    border-radius: 10px;
    background: #FFF;
    box-shadow: 0px 2px 10px 0px rgba(40, 84, 102, 0.25);
