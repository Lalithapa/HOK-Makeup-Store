  }
  .section-{{ section.id }} .skincare-offer-card .content{
    padding: 24px;
  }

  .section-{{ section.id }} .skincare-offer-card .skincare-brand-line {
    margin-bottom: 8px;
    gap: 16px;
  }
  .section-{{ section.id }} .skincare-brand-line img {
    width: 120px;
    height: 34px;
    object-fit: contain;
  }

  .section-{{ section.id }} .skincare-offer-card .discount-text {
    color: #000;
    font-size: 20px;
    font-weight: 700;
  }
  .section-{{ section.id }} .skincare-offer-card .middle-line {
    font-size: 16px;
    color: #D2D2D2;
  }

  .section-{{ section.id }} .skincare-offer-card .tagline-phrase {
    color: #000;
    font-size: 16px;
    text-align: center;
    white-space: nowrap;
  }
