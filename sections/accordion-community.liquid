<!-- section/accordion-community-->
<style>
.section-{{ section.id }}-margin {
  margin-top: {{ section.settings.margin_top_desktop }}px;
  margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
}

.faq-accordion-section {
  max-width: 70%;
  margin: 0 auto;
  padding: 40px 16px;
}
.faq-title {
  font-size: 32px;
  font-weight: bold;
  margin-bottom: 24px;
}
.faq-item {
  border-top: 1px solid #ddd;
  padding: 16px 0;
}
.faq-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
  font-weight: 600;
  font-size: 16px;
}
.faq-icon {
  font-size: 20px;
  transition: transform 0.3s ease;
}
.faq-icon::before {
  content: '+';
}
.faq-item.active .faq-icon::before {
  content: 'â€“';
}

/* Slide-down style */
.faq-content {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.4s ease;
  font-size: 14px;
  line-height: 1.6;
  margin-top: 0;
  padding-right: 32px;
}
.faq-item.active .faq-content {
  margin-top: 10px;
}

@media only screen and (max-width: 768px) {
  .faq-accordion-section { max-width: 90%; }

  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top_mobile }}px;
    margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
  }
}
</style>

<section class="faq-accordion-section section-{{ section.id }}-margin">
  <h2 class="faq-title">{{ section.settings.heading }}</h2>
  {% for block in section.blocks %}
    <div class="faq-item">
      <div class="faq-header">
        <span>{{ forloop.index }}. {{ block.settings.question }}</span>
        <span class="faq-icon"></span>
      </div>
      <div class="faq-content">
        {{ block.settings.answer }}
      </div>
    </div>
  {% endfor %}
</section>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    const items = document.querySelectorAll('.faq-accordion-section .faq-item');

    items.forEach(item => {
      const header = item.querySelector('.faq-header');
      const content = item.querySelector('.faq-content');

      header.addEventListener('click', () => {
        const isOpen = item.classList.contains('active');

        // Collapse all
        items.forEach(i => {
          i.classList.remove('active');
          i.querySelector('.faq-content').style.maxHeight = null;
        });

        // Expand current
        if (!isOpen) {
          item.classList.add('active');
          content.style.maxHeight = content.scrollHeight + 'px';
        }
      });
    });
  });
</script>

