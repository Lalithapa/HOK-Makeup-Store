<script>
  document.addEventListener("DOMContentLoaded", function () {
    if (window.innerWidth < 769) {
      const essentialsSwiper = new Swiper('.essentials-swiper', {
        grabCursor: true,
        spaceBetween: 8,
        slidesOffsetAfter: 10,
        scrollbar: {
          el: '.essentials-scrollbar',
          hide: false,
        },
        breakpoints: {
          0: {
            slidesOffsetAfter: 30,
            slidesPerView: 1.2,
          },
          480: {
            slidesPerView: 1.3,
          },
          640: {
            slidesPerView: 2,
          },
          768: {
            slidesPerView: 2,
          },
        },
      });
    }
  });
</script>
