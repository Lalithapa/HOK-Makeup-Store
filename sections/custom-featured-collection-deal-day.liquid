<!-- section/custom-featured-collection-deal-day.liquid -->
{%- style -%}
  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top_desktop }}px;
    margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
    height: 100vh;
  }
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_desktop }}px;
    padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
  }
  @media screen and (max-width: 768px) {
    .section-{{ section.id }}-margin {
      margin-top: {{ section.settings.margin_top_mobile }}px;
      margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
    }
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top_mobile }}px;
      padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
    }
  }
{%- endstyle -%}
<section class="top-section section-{{ section.id }}-margin section-{{ section.id }}-padding">
  <div
    class="featured-collection_day_deal"
  >
    <div
      class="{% if section.settings.showContainer %}{{ section.settings.showContainer }}{% endif %} carousel-section-wrapper{% if section.settings.addInnerPadding %} spacing_handler{% endif %} scroll-trigger animate--fade-in"
    >
      <div
        class="collection-title-text"
      >
        {% if section.settings['coll-title-sub'] %}
          <p
            class="carousel-sub-title"
          >
            {{ section.settings['coll-title-sub'] }}
          </p>
        {% endif %}
        {% if section.settings['coll-title'] %}
          <p
            class="carousel-title"
          >
            {{ section.settings['coll-title'] }}
          </p>
        {% endif %}
      </div>

      <div class="container-top-image-product">
        <div class="featured-custom-banner">
          <a href="{% if section.settings.link == '#' %}javascript:void(0){% else %}{{ section.settings.link }}{% endif %}">
            <img
              class="desktop_screen"
              src="{{ section.settings.image | image_url }}"
              alt="{{ section.settings.image | escape }}"
              width="100%"
              height="auto"
              loading="eager"
            >
            <img
              class="mobile_screen"
              src="{{ section.settings.image_mobile | image_url}}"
              alt="{{ section.settings.image_mobile | escape }}"
              width="100%"
              height="auto"
              loading="eager"
            >
          </a>
        </div>
        <div
          id="product-slider-{{ section.id }}"
          class="carousel-wrapper-outer {% if section.settings.showContainer == "container" %}spacing{% endif %}"
        >
          {% for product in section.settings.collection.products limit: section.settings.products_to_show %}
            <div class="product__pocket_deal_day">
              {% assign indexing = forloop.index0 %}
              {% render 'new-product-card-double',
                product: product,
                fetch_priority: fetch_priority,
                indexIs: indexing
              %}
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "collection-day-of-deal",
  "class": "product-slider-section",
  "settings": [
    {
    "type": "radio",
    "id": "showContainer",
    "label": "Choose Container Style",
    "options": [
      { "value": "full-width", "label": "Show Full Container" },
      { "value": "container", "label": "Show FrameWork Container" }
    ],
    "default": "full-width"
   },
    {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
    {
        "type": "image_picker",
        "id": "image_mobile",
        "label": "Mobile Image"
      },
   {
    "type": "checkbox",
    "id": "image_priority",
    "label": "Image Priority",
    "info": "By setting fetchpriority to true for an image, youâ€™re telling the browser to prioritize loading that image, which can help improve the LCP metric.",
    "default": false
    },
    {
      "type": "text",
      "id": "coll-title-sub",
      "label": "Collection Sub Title"
    },
    {
      "type": "html",
      "id": "coll-title",
      "label": "Collection Title"
    },
    {
      "type": "url",
      "id": "url",
      "label": "Collection URL"
    },
    {
      "type": "text",
      "id": "url-title",
      "label": "Url Title",
      "default": "View All"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Choose Collection"
    }, {
      "type": "range",
      "id": "products_to_show",
      "min": 5,
      "max": 30,
      "step": 1,
      "default": 6,
      "label": "Number of products to show"
    }, {
      "type": "checkbox",
      "id": "swat_alig",
      "label": "Align swatches",
      "default": true
    },

  {
  "type": "checkbox",
  "id": "showCenter",
  "label": "Show Center Container",
  "info": "If enabled ,Container will show in center",
  "default": false
  },

  {
      "type": "range",
      "id": "margin_top_desktop",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Top (Desktop)",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom_desktop",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Bottom (Desktop)",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_top_desktop",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Top (Desktop)",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom (Desktop)",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_top_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Top (Mobile)",
      "default": 20
    },
    {
      "type": "range",
      "id": "margin_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Margin Bottom (Mobile)",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Top (Mobile)",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 200,
      "step": 2,
      "unit": "px",
      "label": "Padding Bottom (Mobile)",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "featured collection day of deal"
    }
  ]
}
{% endschema %}
<style>
