<!-- section/skincare-icons.liquid -->
{% style %}
.section-{{ section.id }}-margin {
margin-top: {{ section.settings.margin_top_desktop }}px;
margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
padding-top: {{ section.settings.padding_text_top_desktop }}px;
padding-bottom: {{ section.settings.padding_text_bottom_desktop }}px;
}

@media screen and (max-width: 768px) {
.section-{{ section.id }}-margin {
margin-top: {{ section.settings.margin_top_mobile }}px;
margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
padding-top: {{ section.settings.padding_text_top_mobile }}px;
padding-bottom: {{ section.settings.padding_text_bottom_mobile }}px;
}
}
{% endstyle %}
<section class="skincare-icons-section container section-{{ section.id }}-margin">
  <h2 class="skincare-icons-title">{{ section.settings.heading }}</h2>
  <div class="skincare-icons-grid">
    {% for block in section.blocks %}
      <div class="icon-card">
        {% if block.settings.icon != blank %}
          <img
            src="{{block.settings.icon  | image_url }}"
            alt="Extra Product Image"
            title="{{ product.title }}"
            width="158"
            class="icon-img"
            height="157"
          >
        {% endif %}
        {% if block.settings.heading != blank %}
          <h3 class="icon-heading">{{ block.settings.heading }}</h3>
        {% endif %}
        {% if block.settings.text != blank %}
          <p class="icon-description">{{ block.settings.text }}</p>
        {% endif %}
      </div>
    {% endfor %}
  </div>
{% if page.handle == 'community' %}
  {% render 'faqs-terms-buttons' %}
  {% endif %}
</section>
<style>
  .skincare-icons-section {
    background: #fff;
    text-align: center;
  }
  .skincare-icons-title {
    color: #232323;
    text-align: center;
    font-family: var(--header-family);
    font-size: 32px;
    font-style: normal;
    font-weight: 800;
    margin-bottom: 6.25rem;
    text-transform: uppercase;
  }
  .skincare-icons-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 80px;
    width: 100%;
    margin: auto;
  }
  .icon-card {
    /* width: 22%; /* 4 in a row for desktop */
    flex: 1;
    max-width: 270px;
    text-align: center;
  }
  .icon-img {
    margin-bottom: 10px;
    width: 140px;
    object-fit: contain;
  }
  .icon-heading {
    color: #000;
    font-weight: 700;
    font-size: clamp(12px, 2vw, 20px);
  }
  .icon-description {
    color: #000;
    font-size: clamp(14px, 2vw, 18px);
  }
  @media (max-width: 768px) {
    .skincare-icons-title {
      font-size: 22px;
      margin-bottom: 3rem;
    }
    .icon-description {
      line-height: 1;
    }
    .skincare-icons-grid {
      gap: 32px;
      width: 95%;
    }
    .icon-card {
      flex: unset;
      width: 35%;
    }
    .icon-img {
      width: 65px;
      margin: 0px auto 16px;
      height: 73px;
    }
  }
</style>

