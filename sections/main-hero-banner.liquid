  <div class="section-{{ section.id }}-margin">
    <div class="carousel-nav-wrapper position-relative">
        <div id="hero-carousel-{{ section.id }}" class="w-100 h-100 overflow-hidden">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <div class="swiper-slide">
                <a href="{{ block.settings['banner-url'] }}" data-location="Hero-banner-{{ forloop.index }}">
                  {% if block.type == 'image' %}
                      <img
                          src="{{ block.settings.banner-image-desktop | image_url }}"
                          class="{% if block.settings['banner-image-mobile'] != blank %}desktop_screen{% endif %}"
                          height="100%"
                          width="100%" 
                          fetchpriority="{% if forloop.first %}high{% else %}auto{% endif %}"
                          loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                      >
                        {% if block.settings['banner-image-mobile'] != blank %}
                            <img
                            src="{{ block.settings.banner-image-mobile | image_url }}"
                            class="mobile_screen"
                            height="100%"
                            width="100%"
                            fetchpriority="{% if forloop.first %}high{% else %}auto{% endif %}"
                            loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                            >
                        {% endif %}
                    {% elsif block.type == 'video' %}
                      {% assign media_desktop = block.settings['banner-video-desktop'] %}
                      {% assign media_mobile =  block.settings['banner-video-mobile'] %}
                        <video poster="{{ media_desktop.preview_image.src | image_url }}" class="{% unless forloop.first %}lazyvideo {% endunless %}desktop_screen square-banner-media" autoplay loop muted playsinline>
                          <source data-src="{{ media_desktop.sources[1].url }}" type="video/mp4">
                          Your browser does not support the video tag
                        </video>
                        <video poster="{{ media_mobile.preview_image.src | image_url }}" class="{% unless forloop.first %}lazyvideo {% endunless %}mobile_screen square-banner-media" autoplay loop muted playsinline>
                          <source data-src="{{ media_mobile.sources[1].url }}" type="video/mp4">
                          Your browser does not support the video tag.
                        </video>
                  {% endif %}
                </a>
                <div class="main-carousel-cta-btn-wrapper-outter">
                {% if block.settings['cta-btn-1-text'] != blank %}
                  {% comment %} button 1 mobile {% endcomment %}
                  <a
                    href="{{ block.settings['btn1-url'] }}" data-location="Hero-banner-{{ forloop.index }}a"
                    class="
                      mobile_screen button-cta main-carousel-cta-btn main-carousel-cta-btn-1
                      {% if block.settings['btn1-bg-mobile'] == '#ffffff' %}bg-white
                      {% elsif block.settings['btn1-bg-mobile'] == '#000000' %}bg-black
                      {% else %}bg-transparent
                      {% endif %}
                    "
                  >
                    <div class="main-carousel-cta-btn-wrapper">
                      <span class="main-carousel-cta-text">
                        {{ block.settings['cta-btn-1-text'] }}
                      </span>
                    </div>
                  </a>

                  {% if block.settings['show-cta-on-desktop'] == true %}
                    {% comment %} button 1 desktop {% endcomment %}
                    <a
                      href="{{ block.settings['btn1-url'] }}" data-location="Hero-banner-{{ forloop.index }}a"
                      class="desktop_screen button-cta square_pill main-carousel-cta-btn main-carousel-cta-btn-1{% if block.settings['btn1-bg-desktop'] == '#ffffff' %} bg-white{% elsif block.settings['btn1-bg-desktop'] == '#000000' %} bg-black{% else %} bg-transparent{% endif %}{% if block.settings['btn1-bg-hover-desktop'] == '#ffffff' %} bg-hover-white{% elsif block.settings['btn1-bg-hover-desktop'] == '#000000' %} bg-hover-black{% else %} bg-hover-transparent{% endif %}
{% if block.settings['btn1-text-desktop'] == '#ffffff' %} text-white{% elsif block.settings['btn1-text-desktop'] == '#000000' %} text-black{% endif %}
{% if block.settings['btn1-text-hover-desktop'] == '#ffffff' %} text-hover-white{% elsif block.settings['btn1-text-hover-desktop'] == '#000000' %} text-hover-black{% endif %}"
                    >
                      <div class="main-carousel-cta-btn-wrapper">
                        <span class="main-carousel-cta-text">
                          {{ block.settings['cta-btn-1-text'] }}
                        </span>
                      </div>
                    </a>
                  {% endif %}
                {% endif %}

                {% if block.settings['cta-btn-2-text'] != blank %}
                  {% comment %} btn 2 mobile {% endcomment %}
                  <a
                    href="{{ block.settings['btn2-url'] }}"
                    class="
                      mobile_screen button-cta main-carousel-cta-btn main-carousel-cta-btn-2 {% if block.settings['btn2-bg-mobile'] == '#ffffff' %}bg-white
                      {% elsif block.settings['btn2-bg-mobile'] == '#000000' %}bg-black
                      {% else %}bg-transparent
                      {% endif %}
                    " data-banner="Hero-banner-{{ forloop.index }}b"
                  >
                    <div class="main-carousel-cta-btn-wrapper">
                      <span class="main-carousel-cta-text">
                        {{ block.settings['cta-btn-2-text'] }}
                      </span>
                    </div>
                  </a>

                  {% if block.settings['show-cta-on-desktop'] == true %}
                    {% comment %} button 1 desktop {% endcomment %}
                    <a
                      href="{{ block.settings['btn2-url'] }}" data-location="Hero-banner-{{ forloop.index }}b"
                      class="desktop_screen button-cta square_pill main-carousel-cta-btn main-carousel-cta-btn-2{% if block.settings['btn2-bg-desktop'] == '#ffffff' %} bg-white{% elsif block.settings['btn2-bg-desktop'] == '#000000' %} bg-black{% else %} bg-transparent{% endif %}
{% if block.settings['btn2-bg-hover-desktop'] == '#ffffff' %} bg-hover-white{% elsif block.settings['btn2-bg-hover-desktop'] == '#000000' %} bg-hover-black{% else %} bg-hover-transparent{% endif %}
{% if block.settings['btn2-text-desktop'] == '#ffffff' %} text-white{% elsif block.settings['btn2-text-desktop'] == '#000000' %} text-black{% endif %}
{% if block.settings['btn2-text-hover-desktop'] == '#ffffff' %} text-hover-white{% elsif block.settings['btn2-text-hover-desktop'] == '#000000' %} text-hover-black{% endif %}"
                    >
                      <div class="main-carousel-cta-btn-wrapper">
                        <span class="main-carousel-cta-text">
                          {{ block.settings['cta-btn-2-text'] }}
                        </span>
                      </div>
                    </a>
                  {% endif %}
                {% endif %}
              </div>
              </div>
            {% endfor %}
          </div>
        </div>
       
        <div class="arrow_handler">
          <div id="carousel-prev-{{ section.id }}" class="carousel-btn">
            <svg xmlns="http://www.w3.org/2000/svg" width="10" height="17" viewBox="0 0 10 17" fill="none">
            <path d="M9 15.5L2 8.5L9 1.5" stroke="white" stroke-width="2" stroke-linecap="round"/>
          </svg>
          </div>
          <div id="carousel-next-{{ section.id }}" class="carousel-btn">
            <svg xmlns="http://www.w3.org/2000/svg" width="10" height="17" viewBox="0 0 10 17" fill="none">
              <path d="M1 15.5L8 8.5L1 1.5" stroke="white" stroke-width="2" stroke-linecap="round"/>
            </svg>
          </div>
        </div>
        <div id="carousel-pagination-wrapper-{{ section.id }}" ></div>
    </div>
  </div>
<script type="text/javascript">
document.addEventListener('DOMContentLoaded', function () {
    const heroSlider{{ section.id | remove: '-' | remove: '_' }} = new Swiper('#hero-carousel-{{ section.id }}', {
        preloadImages: false, // Disable preloading for lazy loading
        lazy: true,           // Enable lazy loading
        spaceBetween: 12,
        speed: {{ section.settings.slide_speed }},
        touchStartForcePreventDefault:true,
        {% if section.settings.autoplay %}
        autoplay: {
            delay: {{ section.settings.autoplay_time }},
            disableOnInteraction: false,
            pauseOnMouseEnter: true,
        },
        {% endif %}
        navigation: {
            prevEl: '#carousel-prev-{{ section.id }}',
            nextEl: '#carousel-next-{{ section.id }}',
        },
        pagination: {
            el: "#carousel-pagination-wrapper-{{ section.id }}",
            clickable: true,
        }
    });
});
</script>
  
