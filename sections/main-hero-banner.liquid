{%- style -%}
    .section-{{ section.id }}-margin {
      margin-top: {{ section.settings.margin_top_desktop }}px;
      margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
    }
    #carousel-prev-{{ section.id }},
     #carousel-next-{{ section.id }} {
    position: relative;
    /* padding: 16.5px 20px; */
    border-radius: 50px;
    background: transparent;
    border: 1px solid transparent;
    height: 48px;
    aspect-ratio: 1;
    display: none;
  }

  #carousel-prev-{{ section.id }}  {
    left: 28px;
  }

  #carousel-next-{{ section.id }}  {
    right: 28px;
  }

  #carousel-prev-{{ section.id }}>svg,
  #carousel-next-{{ section.id }}>svg {
    width: 10px;
    height: 17px;
  }
  .carousel-nav-wrapper:hover #carousel-prev-{{ section.id }},
  .carousel-nav-wrapper:hover #carousel-next-{{ section.id }} {
    background-color:  rgba(35, 35, 35, 0.14);
  }

  .carousel-nav-wrapper:hover #carousel-prev-{{ section.id }},
  .carousel-nav-wrapper:hover #carousel-next-{{ section.id }} {
    background-color:  rgba(35, 35, 35, 0.14);
  }
     #carousel-pagination-wrapper-{{ section.id }} {
    height: auto;
    position: relative;
    margin-top: 16px;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1;
  }

  #carousel-pagination-wrapper-{{ section.id }} .swiper-pagination-bullet {
    height: 6px;
    width: 6px;
    color: transparent;
    font-size: 0;
    background-color: rgba(33, 33, 33, 0.8);
  }

  #carousel-pagination-wrapper-{{ section.id }} .swiper-pagination-bullet-active {

    background-color: rgba(0, 0, 0, 0.8);
  }
  
  .main-carousel-cta-btn-wrapper-outter {
    position: absolute;
    width: 100%;
    height: 40px;
    padding: 0 12px;
    left: 0;
    bottom: 30px;
    display: flex;
    column-gap: 12px;
    justify-content: flex-start;
  }

  .main-carousel-cta-btn {
    overflow: hidden;
    height: 100%;
    flex: 1;
    max-width: 285px;
    /* width: 190px; */
    font-family: var(--family-heavy);
    font-size: 13px;
    line-height: 16px;
    text-transform: uppercase;
  }

  .main-carousel-cta-btn-wrapper {
    width: 100%;
    height: 100%;

    display: flex;
    justify-content: center;
    align-items: center;
  }

  /* bg and hover styles */
  .bg-white {
    background-color: #fff;
    color: #000;
    border: 1px solid transparent;
  }

  .bg-black {
    background-color: #000;
    color: #fff;
    border: 1px solid transparent;
  }

  .bg-transparent {
    background-color: transparent;
    color: #000;
    border: 1px solid transparent;
  }

  .text-black {
    color: #000;
  }

  .main-carousel-cta-btn-2.text-black {
    border: 1px solid #000;
  }

  .text-white {
    color: #fff;
  }

  .main-carousel-cta-btn-2.text-white {
    border: 1px solid #fff;
  }

  .text-hover-black:hover {
    color: #000 !important;
    border: 1px solid #000;
  }

  .text-hover-white:hover {
    color: #fff !important;
    border: 1px solid #fff;
  }

  .main-carousel-cta-btn.bg-hover-white:hover:before,
  .main-carousel-cta-btn.bg-hover-white:hover:after {
    background-color: #fff !important;
    color: #000;
    border: 1px solid #000 !important;
  }

  .main-carousel-cta-btn.bg-hover-black:hover:before,
  .main-carousel-cta-btn.bg-hover-black:hover:after {
    background-color: #000 !important;
    color: #fff;
  }

  .main-carousel-cta-btn.bg-hover-transparent:hover:before,
  .main-carousel-cta-btn.bg-hover-transparent:hover:after {
    background-color: transparent !important;
    color: #000;
  }

  .mobile_screen.bg-black {
    border: 1px solid #fff;
    color: #fff;
  }

  .mobile_screen.bg-white {
    border: 1px solid #000;
    color: #000;
  }

  .mobile_screen.bg-white:hover {
    color: #fff !important;
    border: 1px solid #fff;
  }

  .mobile_screen.bg-black:hover {
    color: #000 !important;
    border: 1px solid #000;
  }

  .mobile_screen.bg-white:hover:before,
  .mobile_screen.bg-white:hover:after {
    background-color: #000;
  }

  .mobile_screen.bg-black:hover:after,
  .mobile_screen.bg-black:hover:after {
    background-color: #fff;
  }
  @media only screen and (min-width: 768px) {
    #carousel-prev-{{ section.id }},
    #carousel-next-{{ section.id }} {
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .main-carousel-cta-btn-wrapper-outter {
      bottom: 8%;
      padding: 0 5%;
      height: 34px;
      justify-content: flex-start;
    }
    #carousel-pagination-wrapper-{{ section.id }} {
      position: absolute;
      bottom: 4%;
      margin-top: 0px;
    }

    #carousel-pagination-wrapper-{{ section.id }} .swiper-pagination-bullet {
      height: 8px;
      width: 8px;
      color: transparent;
      font-size: 0;
      background-color: rgb(250, 249, 246);
  }

