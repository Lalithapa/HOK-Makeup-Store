{% style %}
  .main-header-wrapper{background-color:#FFF;position:relative;width:100%;display:flex;flex-direction:column;justify-content:center;align-items:center}.main-navbar-wrapper{position:relative;top:0;z-index:1;padding:0 1rem;overflow:auto hidden;width:100%;height:36px}.main-navbar-wrapper>*{font-family:var(--family-regular)}.main-navbar-wrapper::-webkit-scrollbar{display:none}.main-navbar-wrapper>ul{height:100%;display:flex;align-items:center;gap:8px;white-space:nowrap;padding:0}.main-navbar-wrapper>ul>li{padding:10px 8px}.main-navbar-wrapper>ul>li>a{text-decoration:none;color:#646464;font-family:var(--family-medium);font-size:12px;line-height:16px}.timerBg{font-weight:600}@media only screen and (min-width:1200px){.main-navbar-wrapper{display:none}}.announcement-bar-wrapper{width:100%;min-height:30px;opacity:.9}.announcement-bar-slider{width:100%;min-height:30px}.announcement-slide{width:100%;min-height:56px;position:relative;padding:8px;display:flex;flex-direction:column;justify-content:center;align-items:center;row-gap:4px}.announcement-content-wrapper{width:100%;min-height:30px;position:relative;display:flex;flex-direction:column;justify-content:center;align-items:center;row-gap:4px}.announcement-main-heading,.announcement-sub-heading{width:100%;padding:0;margin:0;position:relative;z-index:1;text-align:center;justify-content: center;color:#fff;font-family:var(--family-regular);width:calc(100% - 25px)}.announcement-timer{display:flex;justify-content:center;align-items:center;gap:6px;font-size:16px}.announcement-img{position:absolute;width:100%;height:100%;object-fit:cover}.i-main-plppromo-banner-1{display:flex;align-items:center;width:100%;background-size:cover;background-position:100%;min-height:30px;width:100%;position:absolute;top:0;left:0;justify-content:center;padding:4px;text-align:center}.g-banner_3-main.i-main-plppromo-banner-1{background-position:right} .i-main-plppromo-banner-1 p{font-family:'UniversLT-CondensedBold';font-size:{{block.settings.desk-main-heading-size | default:22 | append:'px'}};line-height:1;text-transform:uppercase;letter-spacing:.4px;padding:4px}.b-header-bottom_slot{overflow:hidden;transition:1s all;z-index:1;position:relative}@media screen and (max-width:1199px){.i-main-plppromo-banner-1 p{font-size:{{block.settings.desk-main-heading-size | default:22 | append:'px'}};padding:7px}}@media screen and (max-width:767px){.announcement-slide{min-height:54px}.announcement-timer{font-size:14px}.i-main-plppromo-banner-1 p{font-family:'UniversLT-CondensedBold';font-size:12px;text-transform:uppercase;letter-spacing:.6px;line-height:1;padding:8px 20px}};
{% endstyle %}
{% if request.path != '/pages/coming-soon' %}
  <div id="announcement-search-bar">
    <div class="main-header-wrapper">
      <!-- navbar -->
      {% if section.settings.menu.links != blank %}
        <div class="main-navbar-wrapper">
          <ul class="main-navbar list-unstyled justify-content-start justify-content-lg-center">
            {% for link in section.settings.menu.links -%}
              <li class="navbar-list-item">
                <a class="navbar-list-link" href="{{ link.url }}"> {{ link.title | escape }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}
      <!-- announcement bar -->
      <div class="announcement-bar-wrapper">
        <div class="announcement-bar-slider {% if section.blocks > 1 %}cgd{% endif %}">
          {% for block in section.blocks %}
            <a
              class="announcement-slide"
              href="{{ block.settings.link }}"
              style="
                {% if block.settings.bg_color_gd != blank %} background-image: {{ block.settings.bg_color_gd }};
                {% elsif block.settings.bg_color != blank  %}  background-color: {{ block.settings.bg_color }}!important;
                {% endif %}
              "
            >
              {% if block.settings.bg_img != blank %}
                <img
                  height="100%"
                  width="100%"
                  src="{{ block.settings.bg_img | image_url }}"
                  class="announcement-img"
                  loading="eager"
                >
              {% endif %}

              {% assign main_heading_size_desk = block.settings['desk-main-heading-size']
                | default: 22
                | append: 'px'
              %}
              {% assign main_heading_size_mob = block.settings['mob-main-heading-size'] | default: 16 | append: 'px' %}

              {% assign sub_heading_size_desk = block.settings['desk-sub-heading-size'] | default: 22 | append: 'px' %}
              {% assign sub_heading_size_mob = block.settings['mob-sub-heading-size'] | default: 8 | append: 'px' %}
              <div class="announcement-content-wrapper">
                <div class="announcement-main-heading" style="color: {{ block.settings.head_col }};">
                  <div class="countDownTimer announcement-timer d-none">
                    <div class="timerBg" id="days">00</div>
                    <div>Day :</div>
                    <div class="timerBg" id="hours">00</div>
                    <div>Hours :</div>
                    <div class="timerBg" id="mins">00</div>
                    <div>Min :</div>
                    <div class="timerBg" id="secs">00</div>
                    <div>Sec</div>
                  </div>
                  <div class="nocountDownTimer justify-content-center">{{ block.settings.text }}</div>
                </div>
                <div
                  class="announcement-sub-heading desktop_screen"
                  style="color: {{ block.settings.sub_head_col }};"
                >
                  {{ block.settings.sub_txt }}
                </div>
              </div>
            </a>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
{% endif %}

{% style %}
  .announcement-main-heading {
    font-size: {{main_heading_size_mob}}!important;
    line-height: 16px !important;
  }
  .announcement-sub-heading {
    font-size: {{ sub_heading_size_mob }}!important;
    line-height: {{ sub_heading_size_mob }}!important;
  }

  @media only screen and (min-width: 992px) {
    .announcement-main-heading {
      font-size: {{ main_heading_size_desk }}!important;
      line-height: 22px!important;
    }
    .announcement-sub-heading {
      font-size: {{ sub_heading_size_desk }}!important;
      line-height: {{ sub_heading_size_desk }}!important;
    }
  }
{% endstyle %}
{% comment %}
  {% javascript %}
     const bufferZone = 200;
     var lastScrollTop = 0;
     // function headerScroll(){
     //   var headerScrollTop = $(this).scrollTop();
     //   headerScrollTop > 250 ? $("#headerSection").addClass("m-sticky") : $("#headerSection").removeClass("m-sticky");
     // }

     function announcementScroll() {
       var scrollTop = $(this).scrollTop();
       if (Math.abs(scrollTop - lastScrollTop) > bufferZone) {
         scrollTop > lastScrollTop ? $('.main-header-wrapper').css({ display:"none" }) :  $('.main-header-wrapper').css({ display:"flex" });
         lastScrollTop = scrollTop;
       }
    }
    window.addEventListener("scroll", () =>{
     // if(window.matchMedia("(min-width: 700px)").matches){headerScroll()};
      announcementScroll();
    } );
  {% endjavascript %}
{% endcomment %}
{% schema %}
{
  "name": "New Announcement Bar",
  "max_blocks": 12,
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Desktop Menu"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background Color"
        },
        {
          "type": "color_background",
          "id": "bg_color_gd",
          "label": "Background Color Gradient"
        },
        {
          "type": "image_picker",
          "id": "bg_img",
          "label": "Background Image"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Announcement Heading",
          "default": "<p>Welcome to our store</p>"
        },
        {
          "type": "color",
          "id": "head_col",
          "label": "Main Heading Color",
          "default": "#fff"
        },
        {
          "type": "range",
          "id": "desk-main-heading-size",
          "label": "Desktop Main Heading Text Size",
          "default": 22,
          "step": 1,
          "min": 2,
          "max": 60,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "mob-main-heading-size",
          "label": "Mobile Main Heading Text Size",
          "default": 14,
          "step": 1,
          "min": 2,
          "max": 60,
          "unit": "px"
        },

        {
          "type": "richtext",
          "id": "sub_txt",
          "label": "Sub Heading",
          "default": "<p>*automatically applied at checkout, excludes sale items, Miracle Cream and Haircare Electricals. Cannot be used in conjunction with any other offer.</p>"
        },
        {
          "type": "color",
          "id": "sub_head_col",
          "label": "Sub Heading Color",
          "default": "#fff"
        },
        {
          "type": "range",
          "id": "desk-sub-heading-size",
          "label": "Desktop Sub Heading Text Size",
          "default": 10,
          "step": 1,
          "min": 2,
          "max": 60,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "mob-sub-heading-size",
          "label": "Mobile Sub Heading Text Size",
          "default": 8,
          "step": 1,
          "min": 2,
          "max": 60,
          "unit": "px"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Announcement Bar Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "New Announcement Bar"
    }
  ]
}
{% endschema %}
