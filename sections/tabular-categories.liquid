{%- style -%}
    .section-{{ section.id }}-margin {
        margin-top: {{ section.settings.margin_top_desktop }}px;
        margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
        margin-inline:auto;
    }
    
    .tabular-category-section {
      /* max-width: 1200px; */
      margin: 40px auto;
    }

    .tabular-category-header {
      text-align: center;
    }

    .tabular-category-header h2 {
      font-size: 40px;
      font-family: var(--header-family);
      margin-bottom: 40px;
    }

    .product-category-tabs {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 16px;
      margin-bottom: 15px;
    }

    .tabular-category-btn {
      background: #FFF;
      color: #CFCDCD;
      box-shadow: 0px 1px 6px 0px rgba(148, 147, 147, 0.25);
      border: 1px solid #CFCDCD;
      padding: 6px 16px;
      border-radius: 50px;
      cursor: pointer;
      font-size: 20px;
    }

    .tabular-category-btn.active {
      color: #000;
      box-shadow: 0px 1px 8px 0px rgba(63, 62, 58, 0.25);
      font-weight: 700;
      border:none;
    }
    .tabular-productGrid{
        display: none;    
    }
    .tabular-productGrid.active{
        display: flex;
        gap: 20px;   
        overflow-x: auto;
        padding-bottom: 2rem;
    }
    .tabular-productGrid.active::-webkit-scrollbar{
        height: 2px;
    }
    .tabular-productGrid.active::-webkit-scrollbar-thumb{
        background: #000;
        border-radius: 10px;
    }

    .tabular-category-quote {
      text-align: center;
      font-style: italic;
      font-size: 18px;
      margin-bottom: 25px;
    }

    .tabular-category-products {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
      justify-content: space-between;
    }

    .tabular-product-card {
      flex: 0 0 calc(33.33% - 20px);
      background: #fff;
      border-radius: 10px;
      overflow: hidden;
      display: flex;
      flex-direction: column;
      transition: 0.3s ease;
    }

    .tabular-product-card img {
      height: auto;
      border-radius: 10px;
    }

    .tabular-section-product-info {
      margin-top: 1rem;
      display: flex;
      gap: 16px;
    }

    .tabular-section-product-info .sequence {
      font-family: "Arapey", serif;
      font-size: 80px;
      line-height: 60px;
    }
    .tabular-section-product-info h4 {
      margin: 0;
      font-size: 16px;
      font-weight: 600;
    }

    .tabular-section-product-info p {
      font-size: 18px;
      margin: 4px 0;
    }

    .tabular-section-product-info span {
      font-size: 20px;
      color: #000;
      font-weight: 700;
    }

    @media (max-width: 900px) {
      .tabular-product-card {
        flex: 0 0 calc(45% - 20px);
      }
    }

    @media screen and (max-width: 768px) {
        .section-{{ section.id }}-margin {
            margin-top: {{ section.settings.margin_top_mobile }}px;
            margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
        }
        .tabular-category-header h2{
          font-size: 22px;
          margin-bottom: 16px;
          text-align: start;
        }
        .product-category-tabs {
          justify-content: start;
          flex-wrap: nowrap;
          gap: 8px;
          overflow-x: auto;
          padding: 10px 5px;
        }
        .product-category-tabs::-webkit-scrollbar {
          display: none;
        }
        .tabular-category-btn {
          padding: 8px 16px;
          font-size: 14px;
          white-space: nowrap;
        }
        .tabular-product-card {
          flex: 0 0 calc(90% - 16px);
      }
      .tabular-section-product-info .sequence {
        font-size: 44px;
      }
      .tabular-section-product-info {
          gap: 8px;
      }
      .tabular-section-product-info span {
        font-size: 14px;
      }
      .tabular-section-product-info p {
          font-size: 12px;
          margin: 0;
      }

    }
  {%- endstyle -%}
  <div class="section-{{ section.id }}-margin">
