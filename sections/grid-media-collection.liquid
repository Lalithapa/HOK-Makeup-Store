{%- style -%}
  .section-{{ section.id }}-margin {
  margin-top: {{ section.settings.margin_top_desktop }}px;
  margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
  }
  .new-slider-title-wrapper{
  margin-bottom:clamp(24px, 2vw, 40px);
  }
  .new-slider-container {
  display: grid;
  grid-template-columns: repeat(2, 2fr) repeat(2, 1fr);
  grid-template-rows: repeat(2, 1fr);
  grid-column-gap: 10px;
  grid-row-gap: 10px;
  }
  .video-hero-container { grid-area: 1 / 1 / 3 / 3;   
    width: 100%;
    overflow: hidden; 
}
  .image-container-for-collection {
  grid-area: 1 / 3 / 2 / 5;
  position:relative;
  }
  .image-sec-container-for-collection { grid-area: 2 / 3 / 3 / 5; }
  .banner-full{
    display: block;
    position: relative;
      height: 100%;
      width: 100%;
  }
  .banner__href{
      font-weight: 500;
      font-size: clamp(14px, 2vw, 18px);
      z-index: 1;
      color: #fff;
      white-space: nowrap;
      line-height: 17px;
      position: absolute;
      left: 2rem;
      bottom: 2rem;
  }

  @media screen and (max-width: 768px) {
  .section-{{ section.id }}-margin {
  margin-top: {{ section.settings.margin_top_mobile }}px;
  margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
  }

  .new-slider-container {
    grid-template-columns: repeat(2, 1fr);
  grid-template-rows: 1fr;
  grid-column-gap: 16px;
  grid-row-gap: 16px;
  }
  .video-hero-container { grid-area: 1 / 1 / 2 / 3; }
  .image-container-for-collection { grid-area: 2 / 1 / 3 / 2; }
  .image-sec-container-for-collection { grid-area: 2 / 2 / 3 / 3; }
  .banner__href{
    left: 50%;
    transform: translate(-50%, 0);
  }
  }
{%- endstyle -%}
{% capture white_arrow %} 
  <svg xmlns="http://www.w3.org/2000/svg" width="8" height="12" viewBox="0 0 8 12" fill="none">
  <path d="M1.5 10.4375L6 5.9375L1.5 1.4375" stroke="#fff" stroke-width="1.5" stroke-linecap="round"></path>
</svg>
 {% endcapture %}
<div class="section-{{ section.id }}-margin ">
  <div class="container new-slider-wrapper new-slider-gap-fix scroll-trigger animate--fade-in">
    <div class="new-slider-title-wrapper">
      {% if section.settings.title != blank %}
        <div class="carousel-section-title-wrapper lll">
          <p>{{- section.settings.title -}}</p>
        </div>
      {% endif %}
    </div>
    <div class="new-slider-content">
      <div class="new-slider-container">
      {% assign ratio = section.settings.cont_1_img.aspect_ratio | default: 1.777 %}
        <div class="video-hero-container" style="aspect-ratio: {{ ratio }}" >
          <a href="{{ section.settings.coll_link_1 }}" class="banner-full" data-location="trends-card-1">
            {% assign media_poster = section.settings.cont_1_img.preview_image.src | image_url: width: 390, format: 'webp' %}
            {{ section.settings.cont_1_img | video_tag:
                image_size: '540x',
                autoplay: false,
                loop: true,
                muted: true,
                controls: false,
                playsinline: true,
                preload: 'none',
                class: 'video lazy-video d-block',
                poster: media_poster
              }}
          </a>
        </div>
        <div class="image-container-for-collection" >
          {% assign desktop_ratio_1 = section.settings.cont_2_img_desktop.aspect_ratio | default: 1.777 %}
          {% assign mobile_ratio_1 = section.settings.cont_2_img.aspect_ratio | default: 1.777 %}
          <a
            class="banner-full"
            href="{{ section.settings.coll_link_2 }}" data-location="trends-card-2"
          > 
            <div class="banner__href">
              {{ section.settings.content_2 }}
              {{ white_arrow }}
            </div>
            <div class="swiper-media-container desktop_screen" style="aspect-ratio: {{ desktop_ratio_1 }}">
               <img
                class="img-fluid"
                src="{{ section.settings.cont_2_img_desktop | image_url: width: 500, format: 'webp' }}"
                alt="{{ section.settings.content_2 | escape }}"
                width="560"
                height="auto"
                loading="lazy"
              >
            </div>
            <div class="swiper-media-container mobile_screen" style="aspect-ratio: {{ mobile_ratio_1 }}">
               <img
                  class="img-fluid"
                  src="{{ section.settings.cont_2_img | image_url: width: 175, format: 'webp' }}"
                  alt="{{ section.settings.content_2 | escape }}"
                  width="175"
                  height="auto"
                  loading="lazy"
                >
            </div>
          </a>
        </div>
        <div class="image-sec-container-for-collection">
          {% assign desktop_ratio_2 = section.settings.cont_2_img_desktop.aspect_ratio | default: 1.777 %}
          {% assign mobile_ratio_2 = section.settings.cont_2_img.aspect_ratio | default: 1.777 %}
          <a
            class="banner-full"
            href="{{ section.settings.coll_link_3 }}" data-location="trends-card-3"
          >
            <div class="banner__href">
              {{ section.settings.content_3 }}
              {{ white_arrow }}
            </div>
            <div class="swiper-media-container desktop_screen" style="aspect-ratio: {{ desktop_ratio_2 }}">
              <img
                class="img-fluid"
                src="{{ section.settings.cont_3_img_desktop | image_url: width: 500, format: 'webp' }}"
                alt="{{ section.settings.content_3 | escape }}"
                width="560"
                height="auto"
                loading="lazy"
              >
              </div>
            <div class="swiper-media-container mobile_screen" style="aspect-ratio: {{ mobile_ratio_2 }}">
              <img
                class="img-fluid"
                src="{{ section.settings.cont_3_img| image_url: width: 175, format: 'webp' }}"
                alt="{{ section.settings.content_3 | escape }}"
                width="175"
                height="auto"
                loading="lazy"
              >
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
