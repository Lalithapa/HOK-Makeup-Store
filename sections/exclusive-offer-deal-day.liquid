"default": 36
},
{
"type": "range",
"id": "padding_top_desktop",
"min": 0,
"max": 200,
"step": 2,
"unit": "px",
"label": "Padding Top (Desktop)",
"default": 36
},
{
"type": "range",
"id": "padding_bottom_desktop",
"min": 0,
"max": 200,
"step": 2,
"unit": "px",
