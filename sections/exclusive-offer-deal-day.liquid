"default": 20
},
{
"type": "range",
"id": "padding_bottom_mobile",
"min": 0,
"max": 100,
"step": 2,
"unit": "px",
"label": "Padding Bottom (Mobile)",
"default": 20
}

],
"blocks": [
{
"type": "text_block",
"name": "Text Block",
"settings": [
{
"type": "text",
"id": "text_content",
"label": "Text",
"default": "STEP INTO"
},
{
"type": "color",
"id": "text_color",
"label": "Text Color",
"default": "#4b4cff"
}

]
}
],
"presets": [
{
"name": "Exclusive Offer Banner"
}
]
}
{% endschema %}
