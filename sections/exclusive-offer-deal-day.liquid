<!-- section/exclusive-offer-deal-day.liquid -->
{{ 'exclusive-offer-deal-day.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-margin {
  margin-top: {{ section.settings.margin_top_desktop }}px;
  margin-bottom: {{ section.settings.margin_bottom_desktop }}px;
  }
  .section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top_desktop }}px;
  padding-bottom: {{ section.settings.padding_bottom_desktop }}px;
  }

  @media screen and (max-width: 768px) {
  .section-{{ section.id }}-margin {
  margin-top: {{ section.settings.margin_top_mobile }}px;
  margin-bottom: {{ section.settings.margin_bottom_mobile }}px;
  }
  .section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top_mobile }}px;
  padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }
  }
{%- endstyle -%}
<div class="exclusive-offer page-width section-{{ section.id }}-margin section-{{ section.id }}-padding">
  <div class="animation-wrapper-top">
    <div
      class="angled-banner-wrapper"
      data-aos="fade-up"
    >
      <div
        class="angled-banner angled-banner-first"
        data-aos-easing="linear"
        data-aos-duration="1000"
        data-aos-delay="300"
      ></div>
      <div
        class="angled-banner  angled-banner-second"
        data-aos-easing="linear"
        data-aos-duration="1000"
        data-aos-delay="300"
      ></div>
      <div
        class="angled-banner angled-banner-third"
        data-aos-easing="linear"
        data-aos-duration="1000"
        data-aos-delay="300"
      ></div>
    </div>

    <div class="baneer-text-offer">
      <div
        class="offer-banner"
        style="background-color: {{ section.settings.background_color }};"
        data-aos="fade-down"
        data-aos-easing="ease-in-out"
        data-aos-duration="1000"
        data-aos-delay="50"
      >
        <div class="offer-text" style="color: {{ section.settings.text_color }};">
          {{ section.settings.offer_text }}
        </div>
        <button
          class="copy-code"
          style="background: {{ section.settings.button_bg }}; color: {{ section.settings.button_text }};"
        >
          {{ 'Tap to copy code ' -}}
          <br>
          <a
            href="https://hokmakeup.com/?fastrrCouponCode={{ section.settings.discount_code }}"
            class="apply-coupon"
            data-code="{{ section.settings.discount_code }}"
          >
            {{- section.settings.discount_code -}}
          </a>
        </button>
        <div class="cutout-before"></div>
        <div class="cutout-after"></div>
        <div class="shimmer-effect"></div>
      </div>

      <div
        class="exclusive-text-blocks"
      >
        {% for block in section.blocks %}
          {% if block.settings.text_content %}
            <p
              class="text-block"
              style="color: {{ block.settings.text_color }};"
              data-aos="fade-up"
              data-aos-easing="linear"
              data-aos-duration="500"
              data-aos-delay="300"
            >
              {{ block.settings.text_content }}
            </p>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>
