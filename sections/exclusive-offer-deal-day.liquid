{
"type": "range",
"id": "margin_bottom_mobile",
"min": 0,
"max": 100,
"step": 2,
"unit": "px",
"label": "Margin Bottom (Mobile)",
"default": 20
},
{
"type": "range",
"id": "padding_top_mobile",
"min": 0,
"max": 100,
"step": 2,
"unit": "px",
