
<section
  class="explore-offers"
  id="explore-offers-{{ section.id }}"
  style="
    --eo-max-width: {{ section.settings.max_width }}px;
    --eo-padding-y: {{ section.settings.padding_y }}px;
    --eo-padding-x: {{ section.settings.padding_x }}px;
    --eo-padding-y-mobile: {{ section.settings.padding_y_mobile }}px;
    --eo-padding-x-mobile: {{ section.settings.padding_x_mobile }}px;
    --eo-gap: {{ section.settings.gap }}px;
    --eo-radius: {{ section.settings.tile_radius }}px;
    --eo-border: {{ section.settings.tile_border_width }}px;
    --eo-border-color: {{ section.settings.tile_border_color }};
    --eo-cols-desktop: {{ section.settings.columns_desktop }};
    --eo-cols-tablet: {{ section.settings.columns_tablet }};
    --eo-bg-color: {{ section.settings.bg_color }};
  "
>
  {% if section.settings.bg_image != blank or section.settings.bg_image_mobile != blank %}
    <div class="explore-offers__bg" aria-hidden="true">
      <picture>
        {% if section.settings.bg_image_mobile != blank %}
          <source
            media="(max-width: 749px)"
            srcset="
              {{ section.settings.bg_image_mobile | image_url: width: 900 }} 900w,
              {{ section.settings.bg_image_mobile | image_url: width: 1200 }} 1200w,
              {{ section.settings.bg_image_mobile | image_url: width: 1600 }} 1600w
            "
            sizes="100vw"
          >
        {% endif %}

        {% assign bg_desktop = section.settings.bg_image | default: section.settings.bg_image_mobile %}
        <img
          class="explore-offers__bg-img"
          src="{{ bg_desktop | image_url: width: 2400 }}"
          srcset="
            {{ bg_desktop | image_url: width: 1200 }} 1200w,
            {{ bg_desktop | image_url: width: 1600 }} 1600w,
            {{ bg_desktop | image_url: width: 2400 }} 2400w
          "
          width="100%"
          height="auto"
          sizes="100vw"
          loading="lazy"
          alt="{{ bg_desktop.alt | default: 'Background' | escape }}"
        >
      </picture>
    </div>
  {% endif %}
{% comment %} {% if section.settings.show_back_home %}
          <a
            href="{{ routes.root_url }}"
            class="back_to_go mobile_screen"
            aria-label="Go back"
            onclick="event.preventDefault(); goBackOrHome();"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="21" height="15" viewBox="0 0 21 15" fill="none">
            <path d="M0.292893 8.07107C-0.0976311 7.68054 -0.0976311 7.04738 0.292893 6.65685L6.65685 0.292892C7.04738 -0.0976319 7.68054 -0.0976319 8.07107 0.292892C8.46159 0.683417 8.46159 1.31658 8.07107 1.70711L2.41421 7.36396L8.07107 13.0208C8.46159 13.4113 8.46159 14.0445 8.07107 14.435C7.68054 14.8256 7.04738 14.8256 6.65685 14.435L0.292893 8.07107ZM20 6.36396C20.5523 6.36396 21 6.81168 21 7.36396C21 7.91625 20.5523 8.36396 20 8.36396V7.36396V6.36396ZM1 7.36396V6.36396L20 6.36396V7.36396V8.36396L1 8.36396V7.36396Z" fill="#362C6E"/>
            </svg>
          </a>
        {% endif %} {% endcomment %}

  <div class="explore-offers__inner">
    {% if section.settings.show_back_home %}
          <a
            href="{{ routes.root_url }}"
            class="back_to_go mobile_screen"
            aria-label="Go back"
            onclick="event.preventDefault(); goBackOrHome();"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="21" height="15" viewBox="0 0 21 15" fill="none">
            <path d="M0.292893 8.07107C-0.0976311 7.68054 -0.0976311 7.04738 0.292893 6.65685L6.65685 0.292892C7.04738 -0.0976319 7.68054 -0.0976319 8.07107 0.292892C8.46159 0.683417 8.46159 1.31658 8.07107 1.70711L2.41421 7.36396L8.07107 13.0208C8.46159 13.4113 8.46159 14.0445 8.07107 14.435C7.68054 14.8256 7.04738 14.8256 6.65685 14.435L0.292893 8.07107ZM20 6.36396C20.5523 6.36396 21 6.81168 21 7.36396C21 7.91625 20.5523 8.36396 20 8.36396V7.36396V6.36396ZM1 7.36396V6.36396L20 6.36396V7.36396V8.36396L1 8.36396V7.36396Z" fill="#362C6E"/>
            </svg>
          </a>
        {% endif %}
    {% if section.settings.heading != blank or section.settings.subheading != blank %}
        <div class="explore-offers__header">
          {% if section.settings.heading != blank %}
            <h2 class="explore-offers__title">{{ section.settings.heading }}</h2>
          {% endif %}
          {% if section.settings.subheading != blank %}
            <p class="explore-offers__subtitle">{{ section.settings.subheading }}</p>
          {% endif %}
        </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="container explore-offers__grid" role="list">
        {% for block in section.blocks %}
          {% if block.type == 'offer' %}
            {% liquid
              assign link = block.settings.link
              assign img_d = block.settings.image_desktop
              assign img_m = block.settings.image_mobile
              assign alt_text = block.settings.alt_text
              if alt_text == blank and img_d != blank
                assign alt_text = img_d.alt
              endif
              if alt_text == blank
                assign alt_text = 'Offer'
              endif
            %}

            <div class="explore-offers__item" role="listitem" {{ block.shopify_attributes }}>
              {% if link != blank %}
                <a class="explore-offers__tile" href="{{ link }}" aria-label="{{ alt_text | escape }}">
              {% else %}
                <div class="explore-offers__tile" aria-label="{{ alt_text | escape }}" role="group">
              {% endif %}

                  {% if img_d != blank %}
                    <picture class="explore-offers__media">
                      {% if img_m != blank %}
                        <source
                          media="(max-width: 749px)"
                          srcset="{{ img_m | image_url: width: 900 }} 900w, {{ img_m | image_url: width: 1200 }} 1200w"
                          sizes="92vw"
                        >
                      {% endif %}

                      <img
                        class="explore-offers__img"
                        src="{{ img_d | image_url: width: 1200 }}"
                        srcset="
                          {{ img_d | image_url: width: 600 }} 600w,
                          {{ img_d | image_url: width: 900 }} 900w,
                          {{ img_d | image_url: width: 1200 }} 1200w,
                          {{ img_d | image_url: width: 1600 }} 1600w
                        "
                        width="100%"
                         height="auto"
                        sizes="(max-width: 749px) 92vw, (max-width: 1023px) calc((var(--eo-max-width) - (var(--eo-gap) * (var(--eo-cols-tablet) - 1))) / var(--eo-cols-tablet)), calc((var(--eo-max-width) - (var(--eo-gap) * (var(--eo-cols-desktop) - 1))) / var(--eo-cols-desktop))"
                        loading="lazy"
                        alt="{{ alt_text | escape }}"
                      >
                    </picture>
                  {% else %}
                    <div class="explore-offers__placeholder">Add offer image</div>
                  {% endif %}

              {% if link != blank %}
                </a>
              {% else %}
                </div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}

    {% if section.settings.show_button and section.settings.button_text != blank and section.settings.button_link != blank %}
      <div class="explore-offers__cta">
        <a class="explore-offers__btn" href="{{ section.settings.button_link }}">
          {{ section.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
  
</section>
<style>
    #explore-offers-{{ section.id }}{
      position: relative;
      overflow: hidden;
      background: var(--eo-bg-color);
    }
    #explore-offers-{{ section.id }} .explore-offers__bg{
       position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: auto;             
        z-index: 0;
        pointer-events: none;
    }
    #explore-offers-{{ section.id }} .explore-offers__bg-img{
      width: 100%;
      height: auto;            
      display: block;
      object-fit: contain;       
      object-position: center top;
    }
    #explore-offers-{{ section.id }} .explore-offers__inner{
      position: relative;
      z-index: 1;
      max-width: var(--eo-max-width);
      margin: 0 auto;
      padding: var(--eo-padding-y) 0px var(--eo-padding-x) 0px;
    }
    #explore-offers-{{ section.id }} .header_flex{
      display: flex;
      align-items: baseline;
      justify-content: space-between;
      gap: 12px;
    }
    #explore-offers-{{ section.id }} .explore-offers__header{
      text-align: center;
      flex: 1;
    }
    #explore-offers-{{ section.id }} .back_to_go{
    align-items: center;
    justify-content: center;
    text-decoration: none;
    cursor: pointer;
    z-index: 1;
    position: absolute;
    top: 6%;
    left: 7%;
    }
    #explore-offers-{{ section.id }} .explore-offers__title{
      margin: 0;
      font-size: clamp(24px, 2.2vw, 30px);
      line-height: 37px;
      font-weight: 800;
      background: linear-gradient(55deg, #221957 29.03%, #463C83 81.89%);
      background-clip: text;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    #explore-offers-{{ section.id }} .explore-offers__subtitle{
      margin: 6px 0 40px 0;
      line-height: normal;
      color: #281E5E;
      font-size: clamp(16px, 2.2vw, 20px);
    }
    #explore-offers-{{ section.id }} .explore-offers__grid{
      display: flex;
      flex-wrap: wrap;
      gap: var(--eo-gap);
      justify-content: center;
    }

    #explore-offers-{{ section.id }} .explore-offers__item{
      flex: 0 0 calc((100% - (var(--eo-gap) * (var(--eo-cols-desktop) - 1))) / var(--eo-cols-desktop));
      max-width: calc((100% - (var(--eo-gap) * (var(--eo-cols-desktop) - 1))) / var(--eo-cols-desktop));
    }

    #explore-offers-{{ section.id }} .explore-offers__tile{
      display: block;
      width: 100%;
      cursor: pointer;
      border-radius: var(--eo-radius);
      overflow: hidden;
      border: var(--eo-border) solid var(--eo-border-color);
      background: rgba(255,255,255,.12);
      text-decoration: none;
    }

    #explore-offers-{{ section.id }} .explore-offers__img{
      width: 100%;
      height: auto;
      display: block;
    }

    #explore-offers-{{ section.id }} .explore-offers__placeholder{
      aspect-ratio: 3 / 1;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 12px;
      opacity: .75;
      background: rgba(255,255,255,.18);
    }

    #explore-offers-{{ section.id }} .explore-offers__cta{
      margin-top: 75px;
      text-align: center;
    }
    #explore-offers-{{ section.id }} .explore-offers__btn{
      display: inline-flex;
      align-items: center;
      justify-content: center;
      padding: 10px 40px;
      border-radius: 50px;
      border: 1px solid #2F2F2F;
      background: transparent;
      color: #000;
      font-size: 16px;
      font-weight: 800;
      text-decoration: none;
    } 
    @media (max-width: 1023px){
      #explore-offers-{{ section.id }} .explore-offers__item{
        flex: 0 0 calc((100% - (var(--eo-gap) * (var(--eo-cols-tablet) - 1))) / var(--eo-cols-tablet));
        max-width: calc((100% - (var(--eo-gap) * (var(--eo-cols-tablet) - 1))) / var(--eo-cols-tablet));
      }
    }
    @media (max-width: 749px){
       #explore-offers-{{ section.id }} .explore-offers__grid{width:90%;margin:auto;}
      #explore-offers-{{ section.id }} .explore-offers__inner{
        padding: var(--eo-padding-y-mobile) var(--eo-padding-x-mobile);
      }
      #explore-offers-{{ section.id }} .explore-offers__item{
        flex: 0 0 100%;
        max-width: 100%;
      }
       #explore-offers-{{ section.id }} .explore-offers__title{font-weight:700;line-height: 32px;}
       #explore-offers-{{ section.id }} .explore-offers__cta{
      margin-top: 30px;}
      #explore-offers-{{ section.id }} .explore-offers__btn{font-size:14px; font-weight:700;}
      #explore-offers-{{ section.id }} .explore-offers__subtitle{
      margin: 0px 0 24px 0;}
    }
  </style>
{% schema %}
{
  "name": "Explore offers grid",
  "settings": [
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background image (desktop)"
    },
    {
      "type": "image_picker",
      "id": "bg_image_mobile",
      "label": "Background image (mobile)"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Fallback background color",
      "default": "#C6D52F"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Explore All Offers"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Tap on any offer to start shopping"
    },
    {
      "type": "checkbox",
      "id": "show_back_home",
      "label": "Show back icon (home)",
      "default": true
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Content max width (px)",
      "min": 900,
      "max": 1400,
      "step": 10,
      "default": 1200
    },
    {
      "type": "range",
      "id": "padding_y",
      "label": "Top & bottom padding (desktop) (px)",
      "min": 20,
      "max": 120,
      "step": 4,
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_x",
      "label": "Left & right padding (desktop) (px)",
      "min": 20,
      "max": 120,
      "step": 4,
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_y_mobile",
      "label": "Top & bottom padding (mobile) (px)",
      "min": 20,
      "max": 120,
      "step": 4,
      "default": 24
    },
    {
      "type": "range",
      "id": "padding_x_mobile",
      "label": "Left & right padding (mobile) (px)",
      "min": 20,
      "max": 120,
      "step": 4,
      "default": 20
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Grid gap (px)",
      "min": 6,
      "max": 36,
      "step": 2,
      "default": 12
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "Columns (desktop)",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "range",
      "id": "columns_tablet",
      "label": "Columns (tablet)",
      "min": 1,
      "max": 3,
      "step": 1,
      "default": 2
    },
    {
      "type": "range",
      "id": "tile_radius",
      "label": "Tile corner radius (px)",
      "min": 0,
      "max": 30,
      "step": 2,
      "default": 10
    },
    {
      "type": "range",
      "id": "tile_border_width",
      "label": "Tile border width (px)",
      "min": 0,
      "max": 4,
      "step": 1,
      "default": 0
    },
    {
      "type": "color",
      "id": "tile_border_color",
      "label": "Tile border color",
      "default": "rgba(0,0,0,0.18)"
    },
    {
      "type": "checkbox",
      "id": "show_button",
      "label": "Show bottom button",
      "default": true
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "CONTINUE SHOPPING"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "blocks": [
    {
      "type": "offer",
      "name": "Offer tile",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_desktop",
          "label": "Offer image (desktop)"
        },
        {
          "type": "image_picker",
          "id": "image_mobile",
          "label": "Offer image (mobile optional)"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Offer link"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt text (optional)"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Explore offers grid",
      "blocks": [
        { "type": "offer" },
        { "type": "offer" },
        { "type": "offer" },
        { "type": "offer" },
        { "type": "offer" }
      ]
    }
  ]
}
{% endschema %}
<script>
  function goBackOrHome() {
    if (window.history.length > 1) {
      window.history.back();
    } else {
      window.location.href = "{{ routes.root_url }}";
    }
  }
</script>