{{ 'floating-nav.css' | asset_url | stylesheet_tag }}
<div id="floating-nav" class="mobile_screen">
  <div class="bottom-nav">
    <a
      href="{% if template == "index" %}javascript:void(0){% else %}/{% endif %}"
      class="nav-item{% if template == "index" %} active{% endif %}"
      {{ template }}
    >
      <span class="icon">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="icon icon-logo"
          width="13"
          height="20"
          viewBox="0 0 13 20"
          fill="none"
        >
          <path d="M4.5 0.00195312H0.5V20.002H4.5V12.423H8.5V20.002H12.5V0.00195312H8.5V7.89669H4.5V0.00195312Z" stroke="#0B0A0A" fill="#0B0A0A"/>
        </svg>
      </span>
      <span class="label">home</span>
    </a>
    <a
      href="{% if template.suffix == "deal-of-the-day" %}javascript:void(0){% else %}/pages/deal-of-the-day{% endif %}"
      class="nav-item{% if template.suffix == "deal-of-the-day" %} active{% endif %}"
    >
      <span class="icon">
        <img
          src="{% if template.suffix == "deal-of-the-day" %}https://cdn.shopify.com/s/files/1/0896/2320/0023/files/Offer_2.svg?v=1749463348{% else %}https://cdn.shopify.com/s/files/1/0896/2320/0023/files/Offer_1.svg?v=1749462823{% endif %}"
          width="25"
          height="22"
          alt="offers"
          loading="eager"
        >
      </span>
      <span class="label">offer</span>
    </a>
    <a
      href="{% if template.suffix == "brand" %}javascript:void(0){% else %}/pages/brands{% endif %}"
      class="nav-item{% if template.suffix == "brand" %} active{% endif %}"
    >
      <span class="icon">
        <img
          src="{% if template.suffix == "brand" %}https://cdn.shopify.com/s/files/1/0896/2320/0023/files/Brands_2.svg?v=1749463013{% else %}https://cdn.shopify.com/s/files/1/0896/2320/0023/files/Brands_1.svg?v=1749463012{% endif %}"
          width="21"
          height="22"
          alt="brands"
          loading="eager"
        >
      </span>
      <span class="label">brands</span>
    </a>
    <a
      href="{% if template.suffix == "hok-rewards" %}javascript:void(0){% else %}/pages/hok-rewards{% endif %}"
      class="nav-item{% if template.suffix == "hok-rewards" %} active{% endif %}"
    >
      <span class="icon nav-hok-reward">
        {% if template.suffix == 'hok-rewards' %}
          <img
            src="https://cdn.shopify.com/s/files/1/0896/2320/0023/files/Hok-rewards.png"
            width="40"
            height="auto"
            alt="hok-rewards"
            loading="eager"
          >
        {% else %}
          {{ 'icon-reward.svg' | inline_asset_content }}
        {% endif %}
      </span>
    </a>
    <a
      href="/account"
      class="nav-item"
    >
      <span class="icon d-center icon-account">
        <svg xmlns="http://www.w3.org/2000/svg" width="13" height="12" viewBox="0 0 13 12" fill="none">
          <circle cx="6.50282" cy="2.57338" r="2.57143" fill="#FDFDFD"/>
          <path d="M11.0743 12.002C11.6265 12.002 12.0823 11.5516 11.997 11.0059C11.806 9.78409 11.2667 8.64696 10.4424 7.75931C9.39757 6.63409 7.98046 6.00195 6.50283 6.00195C5.02519 6.00195 3.60808 6.63409 2.56323 7.75931C1.73899 8.64696 1.19967 9.78409 1.00868 11.0059C0.923383 11.5516 1.37911 12.002 1.9314 12.002L6.50283 12.002H11.0743Z" fill="#FDFDFD"/>
        </svg>
      </span>
      <span class="label">account</span>
    </a>
  </div>
</div>
{% schema %}
{
  "name": "Floating Bar",
  "max_blocks": 12,
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Desktop Menu"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "color",
          "id": "bg_color",
          "label": "Background Color"
        },
        {
          "type": "color_background",
          "id": "bg_color_gd",
          "label": "Background Color Gradient"
        },
        {
          "type": "image_picker",
          "id": "bg_img",
          "label": "Background Image"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Announcement Heading",
          "default": "<p>Welcome to our store</p>"
        },
        {
          "type": "color",
          "id": "head_col",
          "label": "Main Heading Color",
          "default": "#fff"
        },
        {
          "type": "range",
          "id": "desk-main-heading-size",
          "label": "Desktop Main Heading Text Size",
          "default": 22,
          "step": 1,
          "min": 2,
          "max": 60,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "mob-main-heading-size",
          "label": "Mobile Main Heading Text Size",
          "default": 14,
          "step": 1,
          "min": 2,
          "max": 60,
          "unit": "px"
        },

        {
          "type": "richtext",
          "id": "sub_txt",
          "label": "Sub Heading",
          "default": "<p>*automatically applied at checkout, excludes sale items, Miracle Cream and Haircare Electricals. Cannot be used in conjunction with any other offer.</p>"
        },
        {
          "type": "color",
          "id": "sub_head_col",
          "label": "Sub Heading Color",
          "default": "#fff"
        },
        {
          "type": "range",
          "id": "desk-sub-heading-size",
          "label": "Desktop Sub Heading Text Size",
          "default": 10,
          "step": 1,
          "min": 2,
          "max": 60,
          "unit": "px"
        },
        {
          "type": "range",
          "id": "mob-sub-heading-size",
          "label": "Mobile Sub Heading Text Size",
          "default": 8,
          "step": 1,
          "min": 2,
          "max": 60,
          "unit": "px"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Announcement Bar Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Floating Bar"
    }
  ]
}
{% endschema %}
