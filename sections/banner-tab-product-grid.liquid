  }
  
  .tabular-btn {
    background: transparent;
    color: #505050;
    border-radius: 50px;
    border: 1px solid #595959;
    box-shadow: 0px 1px 6px 0px rgba(148, 147, 147, 0.25);
    padding: 8px 16px;
    cursor: pointer;
    font-size: 18px;
    text-transform: capitalize;
    white-space: nowrap;
}
.banner-tabs-grid-section .tabular-category-tab-btn{
