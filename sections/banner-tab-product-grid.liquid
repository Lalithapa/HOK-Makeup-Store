  padding: 6px 16px;
  border-radius: 50px;
  cursor: pointer;
  font-size: 20px;
  text-transform: capitalize;
  white-space: nowrap;
  transition: all 0.3s ease;
}
.banner-tabs-grid-section .tabular-category-tab-btn.active{
  background: #ECAFAF;
  color: #000;
  border: none;
  font-weight: 800;
}
.tabular-btn.active{
