  color:#000;
  box-shadow: 0px 1px 8px 0px rgba(63, 62, 58, 0.25);
  border: none;
  font-weight: 800;
}
.banner-tabs-grid-section .shop-the-look-product-card {
  background: transparent;
  min-width: 390px;
  text-align: left;
}

.shop-the-look-product-card img {
