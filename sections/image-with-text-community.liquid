<!--section/image-with-text-community.liquid-->
{{ 'image-with-text-community.css' | asset_url | stylesheet_tag }}
{%- style -%}
.beauty-boss-banner .richtext-{{ section.id }} {
  padding: {{ section.settings.padding_top_desktop }}px {{ section.settings.padding_bottom_desktop }}px;
}
@media screen and (max-width: 768px) {
  .beauty-boss-banner .richtext-{{ section.id }} {
    padding: {{ section.settings.padding_top_mobile }}px {{ section.settings.padding_bottom_mobile }}px;
  }
   .beauty-boss-banner .richtext-{{ section.id }} br:last-of-type {display:none;}
}
{%- endstyle -%}
{% schema %}
{
  "name": "image-with-text-community",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image for desktop"
    },
    {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image for mobile"
    },

    {
      "type": "richtext",
      "id": "description_text",
      "label": "Right Content",
      "default": "<p>Ready to be part of something bigger? A community of beauty besties...</p>"
    },
       {
      "type": "range",
      "id": "padding_top_desktop",
      "label": "Top Bottom Padding (Desktop)",
      "min": 0,
      "max": 300,
      "step": 10,
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_bottom_desktop",
      "label": "Left Right Padding (Desktop)",
      "min": 0,
      "max": 300,
      "step": 10,
      "default": 100
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "label": "Top Bottom Padding(Mobile)",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 80
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "label": "Left Right Padding (Mobile)",
      "min": 0,
      "max": 200,
      "step": 10,
      "default": 80
    }
  ],
  "presets": [
    {
      "name": "image with text community"
    }
  ]
}
{% endschema %}
<section class="beauty-boss-banner">
  <div class="beauty-boss-container">
    <div class="left-content">
      {% if section.settings.image %}
        <img
        class="desktop_screen"
        src="{{ section.settings.image | image_url: width: 989 }}"
        alt="{{ section.settings.image.alt | default: section.settings.image | escape }}"
        width="989"
        height="610"
        loading="eager"
      />
        <img
          class="mobile_screen"
          src="{{ section.settings.image_mobile | image_url:width: 400 }}"
          alt="{{ section.settings.image_mobile | escape }}"
          width="100%"
          height="100%"
          loading="eager"
          decoding="async"
        >
      {% endif %}
    </div>
    <div class="right-content-community richtext-{{ section.id }}">
      <div class="text-area">
        {{ section.settings.description_text | newline_to_br }}
      </div>
    </div>
  </div>
</section>
