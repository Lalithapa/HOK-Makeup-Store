<deferred-media data-media-id="{{ media.id }}">
  <button
    id="Deferred-Poster-Modal-{{ media.id }}"
    type="button"
    class="position-relative border-0 p-0 w-100"
    aria-label="{{ media.alt }}"
  >
    {%- if mediaPosterImg != null -%}
      <img
        src="{{ media.preview_image.src | image_url }}"
        height="100%"
        width="100%"
        loading="eager"
      >
    {%- endif -%}
    <span class="deferred-media__poster-button motion-reduce">
      {%- render 'icon-play' -%}
    </span>
  </button>
  <template>
    {{
      media
      | video_tag:
        controls: true,
        autoplay: true,
        width: '100%',
        height: '100%',
        playsinline: true,
        class: class,
        poster: mediaPosterImg
    }}
  </template>
</deferred-media>
