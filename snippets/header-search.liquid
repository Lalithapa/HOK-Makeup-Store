<script>
  document.addEventListener("DOMContentLoaded", function () {
  const inputs = document.querySelectorAll('input[data-rotate]');

  inputs.forEach((input) => {
    let words = [];
    try {
      words = JSON.parse(input.getAttribute("data-rotate"));
    } catch (e) {
      return;
    }

    if (!words.length) return;

    const interval =
      parseInt(input.getAttribute("data-rotate-interval"), 10) || 1200;

    let index = 0;

    const setPlaceholder = (word) => {
      input.placeholder = `Search for "${word}"`;
    };
    setPlaceholder(words[index]);

    setInterval(() => {
      if (document.activeElement === input && input.value.length > 0) return;
      index = (index + 1) % words.length;
      setPlaceholder(words[index]);
    }, interval);
  });
});
</script>