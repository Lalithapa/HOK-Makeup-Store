<div id="modalOverlay-form" class="modal-overlay-form" role="dialog" aria-modal="true" aria-labelledby="modalTitle" aria-describedby="modalDesc">
    <div class="modal-form text-center" tabindex="-1">
      <button class="close-btn-form" id="closeModal-form" aria-label="Close modal">&times;</button>
      <h2 id="modalTitle-form">Meet Dr. Paw Paw â€” <br> Coming Soon ðŸª„</h2>
       {% form 'customer', class: 'newsletter-form' %}
         {%- if form.posted_successfully? -%}
            <p id="modalDesc-form">You're on the list!</p>
        <div class="b-email_sign_up-field m-success" id="Newsletter-success--{{ section.id }}" tabindex="-1" autofocus>
          <p class="b-email_sign_up-success_message text-center">Thanks for signing up.</p>
        </div>
      {% else %}
            <p id="modalDesc-form">Be the first to know when it drops.</p>
           <input type="hidden" name="contact[tags]" value="dr-paw-paw-notifier">
      <div class="newsletter-form__field-wrapper">
        <div class="f-field b-email_sign_up-email_input m-auto mw-100 d-flex gap-2
        ">
          <input
            id="NewsletterForm--{{ section.id }}"
            type="email"
            name="contact[email]"
            class="f-input_email-field rounded"
            value="{{ form.email }}"
            aria-required="true"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            {% if form.errors %}
              autofocus aria-invalid="true" aria-describedby="Newsletter-error--{{ section.id }}"
            {% elsif form.posted_successfully? %}
              aria-describedby="Newsletter-success--{{ section.id }}"
            {% endif %}
            placeholder="*Enter your email"
            required
          >
          <button
            type="submit"
            class="action-btn b-email_sign_up-submit text-nowrap rounded"
            name="commit"
            id="Subscribe"
            aria-label="{{ 'newsletter.button_label' | t }}"
          >
             âœ¨ Notify Me
          </button>
        </div>
      </div>
      {%- endif -%}
      {%- if form.errors -%}
          <div class="f-field-error" id="Newsletter-error--{{ section.id }}">
            <span class="f-field-error_text">Please enter a valid email address</span>
          </div>
        {%- endif -%}
    {% endform %}
    </div>
  </div>

