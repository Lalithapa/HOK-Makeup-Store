<div class="product-form">
  <form
    action="/cart/add"
    method="post"
    enctype="multipart/form-data"
    id="AddToCartForm"
  >
    <div id="mobile_sticky">
      <div class="row" id="main-product-handle">
        <div class="col-3 d-center p-0">
          <div class="qtydiv">
            <div class="qtybox d-flex">
              <span class="btnqty qtyminus icon icon-minus">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="45" viewBox="0 0 32 45" fill="none">
                  <rect width="32" height="45" fill="white"/>
                  <path d="M11.5 22.5H20.5" stroke="black" stroke-width="1.25" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
              <input
                type="text"
                id="main-product-handle-qty"
                name="quantity"
                value="1"
                min="1"
                class="quantity-selector quantity-input"
                inventory="{{ product.first_available_variant.inventory_quantity }}"
                readonly=""
              >
              <span class="btnqty qtyplus icon icon-plus">
                <svg xmlns="http://www.w3.org/2000/svg" width="32" height="45" viewBox="0 0 32 45" fill="none">
                  <rect width="32" height="45" fill="white"/>
                  <path d="M16 18V27M11.5 22.5H20.5" stroke="black" stroke-width="1.25" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </span>
            </div>
          </div>
        </div>
        <div class="col-7 col-md-9 d-center p-0 pl-1">
          <button
            class="b-add_to_bag-button button-cta atc"
            id="main-product-handle-btn"
            type="button"
            name="id"
            {% if first_variant.inventory_quantity <= 0 %}
              disabled="true"
            {% endif %}
            product_variantId="{{ first_variant.id }}"
          >
            {% if first_variant.inventory_quantity > 0 %} Add to bag {% else %} Out of Stock {% endif %}
          </button>
        </div>
        <div class="col-2 mobile_screen mobile-flex-center">
          <div
            class="wishlist-engine"
            data-product_id="{{  product.id }}"
            data-variant_id="{{ first_variant.id }}"
            data-full_button="false"
            data-css="true"
          ></div>
          <div
            style="display: block;"
            class="gw-add-to-wishlist-product-card-placeholder"
            data-gw-product-id="{{ product.id }}"
            data-gw-variant-id="{{ product.first_available_variant.id }}"
          ></div>
        </div>
        <div class="col-12">
          <div class="b-qty_selector-error">
            <span class="b-qty_selector-error_message"
              >You can not buy more than
              <span id="variants-Inventory">{{ product.first_available_variant.inventory_quantity }}</span>
              products at once. Quantity has been adjusted.</span
            >
          </div>
        </div>
      </div>
    </div>
  </form>
</div>
{% comment %}
  {% render 'swatchCss' %}
{% endcomment %}
