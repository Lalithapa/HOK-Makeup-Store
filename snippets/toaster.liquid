{% comment %} toastify_notication/ Snackbar {% endcomment %}
<div id="toastifies" class="toastify_notication d-center" style="display:none">
    <div class="notification success m-auto">
      <span class="d-center" >
        <span>Added to Bag</span>
      </span>
      <span class="view" onclick="cartSlide()">View Bag <svg xmlns="http://www.w3.org/2000/svg" width="6" height="12" viewBox="0 0 6 12" fill="none">
      <path d="M1 10.5L5 6L1 1.5" stroke="white" stroke-width="1.5" stroke-linecap="round"/>
      </svg></span>
    </div>
  </div>
  {% comment %} Loading Screen Animation  {% endcomment %}
<div class="bg-loader d-none" id="bg-loader">
    <img class="mobile_screen" src="https://cdn.shopify.com/s/files/1/1743/7443/files/Comp_1_1.gif?v=1686723543" width="100%" height="100%" alt="background Loading Animation"/>
    <img class="desktop_screen" src="https://cdn.shopify.com/s/files/1/1743/7443/files/desktop_size.gif?v=1686723901" width="100%" height="100%" alt="background Loading Animation"/>
</div>
<style>

.toastify_notication {
  position: fixed;
  bottom: 40px;
  z-index: 16000161 !important;
  width: 100%;
}

.notification {
  background-color: #212529;
  padding: 20px;
  width: 350px;
  border-radius: 4px;
  box-shadow: 0 6px 10px #00000024, 0 1px 18px #0000001f, 0 3px 5px #0003;
  cursor: pointer;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  overflow: hidden;
}

.notification span {
  font-family: var(--family-medium);
  font-size: 14px;
  color: #fff;
  line-height: 1.6;
  white-space: nowrap;
}

.notification span.view {
  text-transform: uppercase;
}

@media screen and (max-width: 768px) {
  .toastify_notication {
    bottom: 40px;
  }

  .notification {
    width: 90% !important;
  }

  #insta-feed h2 {
    font-size: 20px !important;
  }
}

</style>