<script>
  (function() {
    class MarqueeBlock{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.adjustSpeed();
      }

      adjustSpeed() {
        const content = this.querySelector('.ai-marquee-content-{{ ai_gen_id }}');
        if (content) {
          const contentWidth = content.scrollWidth / 2;
          const speed = {{ block.settings.animation_speed }};
          content.style.animationDuration = speed + 's';
        }
      }
    }

    customElements.define('marquee-block-{{ ai_gen_id }}', MarqueeBlock{{ ai_gen_id }});
  })();
</script>

